
@import "mixins"

html, body
	height 100%

body
	background #eee
	background-size 100% 100%


// Set scroll bar style.
$scrollbar_size = 7px
$scrollbar_color = #eee
::-webkit-scrollbar
	width $scrollbar_size
	height $scrollbar_size
::-webkit-scrollbar-track
	background #fff
	border 1px solid $scrollbar_color
	box-shadow 1px 1px 3px $scrollbar_color inset
::-webkit-scrollbar-thumb
	background #ccc
	border-radius $scrollbar_size

	&:hover
		background #99C4E6

.btn
	border-radius 2px

@keyframes kfs_tooltip
	0%
		opacity 0
		transform scale(0.9)
	100%
		opacity .8
		transform scale(1)

.tooltip.in
	animation kfs_tooltip 200ms
	.tooltip-inner
		border-radius 2px

// Debug helpers
.debug-tag
	position absolute
	right 0
	top 0
	margin 10px
	color #aaa
	z-index 1000

.cursor-pointer
	cursor pointer

#NB-info_box
	position absolute
	top 60px
	width 100%
	text-align center
	display none
	z-index 10000

	.info
		margin auto
		display inline-block
		border-radius 3px
		padding 5px 15px
		background rgba(0, 0, 0, 0.7)
		color #FFF

		&.red
			background rgba(235, 27, 27, 0.7)
