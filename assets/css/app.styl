@import "mixins"

.btn
	border-radius 2px

@keyframes kfs_tooltip
	0%
		opacity 0
		transform scale(0.9)
	100%
		opacity .8
		transform scale(1)

.tooltip.in
	animation kfs_tooltip 200ms
	.tooltip-inner
		border-radius 2px

.cursor-pointer
	cursor pointer

#NB-info_box
	position absolute
	top 60px
	width 100%
	text-align center
	display none
	z-index 10000

	.info
		margin auto
		display inline-block
		border-radius 3px
		padding 5px 15px
		background rgba(0, 0, 0, 0.7)
		color #FFF

		&.red
			background rgba(235, 27, 27, 0.7)
